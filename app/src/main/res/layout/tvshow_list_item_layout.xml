<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/_8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/g900"
        app:cardCornerRadius="@dimen/_16dp"
        app:cardElevation="0dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/poster"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:background="@color/g900"
            android:foreground="@drawable/gradient_overlay"
            tools:srcCompat="@drawable/ic_no_photo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/typeContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                app:cardCornerRadius="@dimen/_4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/typeText"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@color/marsDark"
                    android:paddingHorizontal="@dimen/_8dp"
                    android:paddingVertical="@dimen/_2dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sp"
                    android:textStyle="bold"
                    tools:text="Movie" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="@dimen/_4dp"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="3"
                android:paddingHorizontal="@dimen/_8dp"
                android:paddingVertical="@dimen/_2dp"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="@dimen/_22sp"
                app:autoSizeMinTextSize="@dimen/_12sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="Dahmer â€“ Monster: The Jeffrey Dahmer Story" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>